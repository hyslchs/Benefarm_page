---
import "../styles/global.css";
interface Props {
  title?: string;
  description?: string;
  image?: string;
}

import SEO from "../components/SEO.astro";

const {
  title = 'Benefarm 培樂儂 數位策展',
  description = '資訊使用者行為探索...',
  image
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site)
  : Astro.url;
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/Benefarm_page/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- keep basic head essentials and fonts, delegate meta tags to SEO component -->
		<meta name="theme-color" content="#00d959" />
		<meta name="msapplication-TileColor" content="#00d959" />

		<!-- Fonts -->
		<link href="https://font.emtech.cc/css/LINESeedTW" rel="stylesheet" />

		<SEO
			title={title}
			description={description}
			image={image}
			pathname={Astro.url.pathname}
		/>
	</head>
	<body>
		<slot />
		<script>
			import '../scripts/animations.ts';
		</script>
	</body>
</html>
