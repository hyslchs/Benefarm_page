---
const navItems = [
  { id: "landing", label: "首頁" },
  { id: "hero", label: "永續初心" },
  { id: "intro", label: "新莊介紹" },
  { id: "intro-hoc", label: "產業轉型" },
  { id: "sessions", label: "探索議題" },
  { id: "video-section-title", label: "影片精選" },
  { id: "survey-demo", label: "滿意度調查" },
  { id: "faq", label: "常見問題" }
];
---

<nav class="sidebar-nav" aria-label="章節導覽" data-collapsed="false">
  <!-- 收合/展開的小箭頭 -->
  <button
    type="button"
    class="sidebar-nav__collapse"
    aria-label="收起導覽"
    aria-pressed="false"
    title="收起導覽"
  >
    <!-- 用 SVG 畫一個尖頭，透過旋轉表示收/展 -->
    <svg class="sidebar-nav__collapse-icon" width="18" height="18" viewBox="0 0 24 24" aria-hidden="true">
      <path d="M15.41 7.41 14 6l-6 6 6 6 1.41-1.41L10.83 12z"></path>
    </svg>
  </button>

  <!-- 行動版清單開關 -->
  <button type="button" class="sidebar-nav__toggle" aria-expanded="false">
    <span class="sidebar-nav__toggle-label">章節選單</span>
    <span aria-hidden="true" class="sidebar-nav__toggle-icon">☰</span>
  </button>

  <ul class="sidebar-nav__list">
    {navItems.map((item) => (
      <li class="sidebar-nav__item">
        <a class="sidebar-nav__link" href={`#${item.id}`}>
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>

<script>
  const nav = document.querySelector('.sidebar-nav');
  const navToggle = nav?.querySelector('.sidebar-nav__toggle');
  const collapseBtn = nav?.querySelector('.sidebar-nav__collapse');
  const collapseIcon = nav?.querySelector('.sidebar-nav__collapse-icon');
  const navLinks = Array.from(nav?.querySelectorAll('.sidebar-nav__link') ?? []);
  const sectionTargets = navLinks
    .map((link) => {
      const selector = link.getAttribute('href');
      if (!selector || !selector.startsWith('#')) return null;
      return document.querySelector(selector);
    })
    .filter((section) => Boolean(section));

  const mobileMediaQuery = window.matchMedia('(max-width: 1024px)');

  // --- Collapsed state persistence ---
  const COLLAPSE_KEY = 'sidebar-collapsed';
  const setCollapsed = (collapsed) => {
    if (!nav || !collapseBtn) return;
    nav.classList.toggle('is-collapsed', collapsed);
    nav.dataset.collapsed = String(collapsed);
    collapseBtn.setAttribute('aria-pressed', String(collapsed));
    collapseBtn.setAttribute('aria-label', collapsed ? '展開導覽' : '收起導覽');
    collapseBtn.setAttribute('title', collapsed ? '展開導覽' : '收起導覽');

    // 旋轉箭頭方向（收起時箭頭朝左，提示可展開）
    if (collapseIcon) {
      collapseIcon.style.transform = collapsed ? 'rotate(180deg)' : 'rotate(0deg)';
    }

    try { localStorage.setItem(COLLAPSE_KEY, String(collapsed)); } catch (e) {}
  };

  const getInitialCollapsed = () => {
    try {
      const v = localStorage.getItem(COLLAPSE_KEY);
      return v === 'true';
    } catch (e) {
      return false;
    }
  };

  const setToggleStateForViewport = () => {
    if (!nav || !navToggle) return;
    if (mobileMediaQuery.matches) {
      const isOpen = nav.classList.contains('is-open');
      navToggle.setAttribute('aria-expanded', String(isOpen));
    } else {
      nav.classList.remove('is-open');
      navToggle.setAttribute('aria-expanded', 'true');
    }
  };

  const activateLink = (sectionId) => {
    navLinks.forEach((link) => {
      const targetId = link.getAttribute('href');
      const isActive = targetId === `#${sectionId}`;
      link.classList.toggle('sidebar-nav__link--active', isActive);
    });
  };

  // 行動版清單開關
  if (navToggle) {
    navToggle.addEventListener('click', () => {
      if (!nav) return;
      const willOpen = !nav.classList.contains('is-open');
      nav.classList.toggle('is-open', willOpen);
      navToggle.setAttribute('aria-expanded', String(willOpen));
    });
  }

  // 點連結後自動收起行動版清單
  navLinks.forEach((link) => {
    link.addEventListener('click', () => {
      if (!mobileMediaQuery.matches || !nav || !navToggle) return;
      nav.classList.remove('is-open');
      navToggle.setAttribute('aria-expanded', 'false');
    });
  });

  // 章節觀測，高亮目前所在段落
  const observerOptions = {
    root: null,
    rootMargin: '-45% 0px -45% 0px',
    threshold: 0.2,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        activateLink(entry.target.id);
      }
    });
  }, observerOptions);

  sectionTargets.forEach((section) => observer.observe(section));
  if (sectionTargets.length > 0) activateLink(sectionTargets[0].id);

  // 初始化：viewport 與收合狀態
  setToggleStateForViewport();
  mobileMediaQuery.addEventListener('change', setToggleStateForViewport);

  // 初始還原上次的收合狀態
  setCollapsed(getInitialCollapsed());

  // 點擊收合/展開箭頭
  if (collapseBtn) {
    collapseBtn.addEventListener('click', () => {
      const next = !(nav?.classList.contains('is-collapsed'));
      setCollapsed(next);
    });
    // 鍵盤支援：Enter / Space
    collapseBtn.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        collapseBtn.click();
      }
    });
  }
</script>

<style>
  .sidebar-nav {
    position: fixed;
    right: 2rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: 0.75rem;
    padding: 1rem;
    width: 15rem;
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(12px);
    border-radius: 1.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
    border: 1px solid rgba(0, 0, 0, 0.04);
    z-index: 60;
  }

  /* 小箭頭（固定在 Nav 右側外緣，像一個拉把） */
  .sidebar-nav__collapse {
    position: absolute;
    right: -0.5rem;
    top: 0.5rem;
    transform: translateX(100%);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 9999px;
    border: 1px solid rgba(0,0,0,0.06);
    background: #ffffff;
    cursor: pointer;
    box-shadow: 0 10px 24px rgba(0,0,0,0.12);
    transition: transform 0.25s ease, box-shadow 0.25s ease, opacity 0.25s ease;
  }
  .sidebar-nav__collapse:hover,
  .sidebar-nav__collapse:focus-visible {
    box-shadow: 0 14px 28px rgba(0,0,0,0.18);
    outline: none;
  }
  .sidebar-nav__collapse-icon {
    display: block;
    transition: transform 0.25s ease;
    fill: currentColor;
  }

  .sidebar-nav__toggle {
    display: none;
  }

  .sidebar-nav__toggle-label {
    font-weight: 600;
    letter-spacing: 0.05em;
  }

  .sidebar-nav__toggle-icon {
    font-size: 1.25rem;
    line-height: 1;
  }

  .sidebar-nav__list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .sidebar-nav__item { width: 100%; }

  .sidebar-nav__link {
    display: block;
    width: 100%;
    padding: 0.65rem 1rem;
    border-radius: 9999px;
    color: var(--color-text);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    background: transparent;
    border: 1px solid transparent;
    transition: background-color 0.25s ease, color 0.25s ease, box-shadow 0.25s ease;
  }
  .sidebar-nav__link:hover,
  .sidebar-nav__link:focus-visible {
    background: var(--color-primary-light);
    color: #ffffff;
    box-shadow: 0 12px 30px rgba(0, 217, 89, 0.25);
    outline: none;
  }
  .sidebar-nav__link--active {
    background: var(--color-primary);
    color: #ffffff;
    box-shadow: 0 14px 32px rgba(0, 217, 89, 0.35);
  }

  /* 收合狀態：隱藏清單與行動版按鈕，拿掉外框影響，以免遮擋文案 */
  .sidebar-nav.is-collapsed {
    background: transparent;
    backdrop-filter: none;
    border: none;
    box-shadow: none;
    width: auto;
    padding: 0;
  }
  .sidebar-nav.is-collapsed .sidebar-nav__list,
  .sidebar-nav.is-collapsed .sidebar-nav__toggle {
    display: none !important;
  }
  /* 收合時把拉把更貼近螢幕右緣 */
  .sidebar-nav.is-collapsed .sidebar-nav__collapse {
    right: 0;
    transform: translateX(calc(100% + 0.25rem));
  }

  @media (max-width: 1200px) {
    .sidebar-nav { right: 1.5rem; }
  }

  @media (max-width: 1024px) {
    .sidebar-nav {
      top: auto;
      bottom: 1.5rem;
      right: 1.5rem;
      transform: none;
      width: auto;
      padding: 0.75rem;
      background: rgba(255, 255, 255, 0.92);
      backdrop-filter: blur(12px);
      border-radius: 1.25rem;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.12);
      border: 1px solid rgba(0, 0, 0, 0.04);
      align-items: flex-end;
      gap: 0.75rem;
    }

    .sidebar-nav__collapse {
      position: absolute;
      top: -0.5rem;
      right: 0.5rem;
      transform: translateY(-100%);
    }

    .sidebar-nav__toggle {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      border: none;
      background: var(--color-primary);
      color: #ffffff;
      padding: 0.65rem 1.1rem;
      border-radius: 9999px;
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      box-shadow: 0 15px 35px rgba(0, 217, 89, 0.35);
    }

    .sidebar-nav__list {
      position: absolute;
      bottom: calc(100% + 0.75rem);
      right: 0;
      background: rgba(255, 255, 255, 0.96);
      backdrop-filter: blur(12px);
      border-radius: 1.25rem;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.18);
      padding: 0.75rem;
      gap: 0.5rem;
      display: none;
      min-width: 12rem;
    }

    .sidebar-nav.is-open .sidebar-nav__list {
      display: flex;
    }

    .sidebar-nav__link {
      font-size: 1rem;
      padding: 0.75rem 1rem;
    }

    /* 行動版收合時，整個膠囊外框取消，只留箭頭 */
    .sidebar-nav.is-collapsed {
      background: transparent;
      border: none;
      box-shadow: none;
      padding: 0;
    }
  }

  @media (max-width: 600px) {
    .sidebar-nav {
      right: 1rem;
      bottom: 1rem;
    }
    .sidebar-nav__toggle {
      padding: 0.6rem 1rem;
      font-size: 0.95rem;
    }
    .sidebar-nav__list {
      min-width: 11rem;
      padding: 0.65rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sidebar-nav,
    .sidebar-nav__link,
    .sidebar-nav__toggle,
    .sidebar-nav__collapse,
    .sidebar-nav__collapse-icon {
      transition: none !important;
      animation: none !important;
    }
  }
</style>
